@model IEnumerable<HubComercio.Models.Produto>
@{
    var tenant = ViewData["Tenant"] as HubComercio.Models.Tenant;
    Layout = null; // Vamos usar um layout limpo para o catálogo
}

<!DOCTYPE html>
<html>
<head>
    <title>Catálogo - @tenant.NomeEstabelecimento</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* A mágica acontece aqui: usamos a cor que você salvou no banco! */
        .navbar, .btn-primary { background-color: @tenant.CorPrincipal !important; }
        .card-price { color: @tenant.CorPrincipal; font-weight: bold; }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark shadow-sm mb-4">
        <div class="container text-center">
            <span class="navbar-brand h1">@tenant.NomeEstabelecimento</span>
        </div>
    </nav>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@item.ImagemUrl" class="card-img-top" alt="@item.Nome" style="height: 180px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Nome</h5>
                            <p class="card-text text-muted mb-2">@item.Categoria.Nome</p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="card-price h5 mb-0">R$ @item.Preco</span>
                                <span class="badge bg-light text-dark">@item.UnidadeMedida</span>
                            </div>

                            <a href="https://wa.me/5518999999999?text=Olá, vi o seu catálogo e quero: @item.Nome"
                               target="_blank"
                               class="btn btn-success w-100 shadow-sm">
                                <i class="bi bi-whatsapp"></i> Pedir no WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>